@{
    ViewData["Title"] = "Home Page";
}

@section Styles {
    <link href="~/lib/angucomplete/angucomplete.css" rel="stylesheet" asp-file-version="true" type="text/css" />
    <link href="~/css/weather.css" rel="stylesheet" asp-file-version="true" type="text/css" />
}
<div style="height: 300px">

</div>
<div ng-app="app">
    <div ng-controller="MainCtrl">
        <angucomplete id="ex1"
                      placeholder="Search countries"
                      pause="100"
                      selectedobject="selectedCountry"
                      localdata="countries"
                      searchfields="name"
                      titlefield="name"
                      minlength="1"
                      inputclass="form-control form-control-small" />

        <div class="weather-board">
            <div class="weather-today" ng-model="weather.today">
                <div class="day">{{date}}</div>
                <div class="temperature">
                    {{temperature.max}}, {{temperature.min}}
                </div>
            </div>
        </div>
        <div ng-repeat="x in weather.forecast" class="weather-tile">
            <div class="day">{{x.date}}</div>
            <div class="temperature">
                <div>
                    {{x.temperature.max}}, {{x.temperature.min}}
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/angucomplete/angucomplete.js"></script>
    <script src="~/js/custom/weather.js"></script>
    <script>

    </script>
}
